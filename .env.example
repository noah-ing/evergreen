# Evergreen Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Azure AD / Microsoft 365
# =============================================================================
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# =============================================================================
# Google Workspace (Optional - if using Google instead of M365)
# =============================================================================
GOOGLE_SERVICE_ACCOUNT_JSON=  # Path to service account JSON file
GOOGLE_DELEGATED_USER=        # Email of user to impersonate

# =============================================================================
# LLM Providers
# =============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
COHERE_API_KEY=
VOYAGE_API_KEY=

# =============================================================================
# Infrastructure
# =============================================================================
# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=              # Only needed for Qdrant Cloud

# FalkorDB Graph Database
FALKORDB_URL=redis://localhost:6379

# PostgreSQL (metadata store)
DATABASE_URL=postgresql://evergreen:evergreen@localhost:5432/evergreen

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development       # development, staging, production
LOG_LEVEL=DEBUG              # DEBUG, INFO, WARNING, ERROR

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Authentication (JWT)
# =============================================================================
# CRITICAL: Change this in production! Use: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_GOOGLE_CONNECTOR=false
ENABLE_SLACK_CONNECTOR=false
DRY_RUN_MODE=false           # If true, no actual changes to external systems

# =============================================================================
# Sync Settings
# =============================================================================
INITIAL_SYNC_LOOKBACK_DAYS=90
INCREMENTAL_SYNC_INTERVAL_MINUTES=5
MAX_CONCURRENT_SYNCS=3

# =============================================================================
# Model Settings
# =============================================================================
EMBEDDING_MODEL=voyage-3       # voyage-3, text-embedding-3-large, etc.
EMBEDDING_DIMENSIONS=1024
LLM_MODEL=claude-3-5-sonnet-latest
RERANK_MODEL=rerank-v3.5
